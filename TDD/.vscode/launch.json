    "version": "0.2.0",
    "configurations": [ 
        
        {
            "type":"node",
            "request":"launch",
            "name": "GulpÂ´task",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "task"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Python: Arquivo Atual",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "args": [
                "-sv"
            ],
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
    ]
}